            <Label styleClass="texto" text="Escribe Tu Mensaje Aqui">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextArea fx:id="mensaje" prefHeight="200.0" prefWidth="200.0" />
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="100.0">
               <children>
                  <Button mnemonicParsing="false" onMouseClicked="#btnEnviarMensajeEvent" text="Enviar mensaje">
                     <font>
                        <Font size="14.0" />
                     </font></Button>
               </children>
            </HBox>
         </children>
      </VBox>
